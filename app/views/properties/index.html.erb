<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Properties" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Properties</h1>
    <%= link_to "New property", new_property_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="properties" class="min-w-full">
    <table class="w-full">
      <thead>
        <tr>
          <th>Address</th>
          <th>Units</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= render(@properties) || render('empty') %>
      </tbody>
    </table>
  </div>
  <%== pagy_nav(@pagy) %>
</div>
