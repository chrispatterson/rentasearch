<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Search" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Search</h1>
      <%= form_with(url: search_url, method: 'get', local: true) do %>
    <div>
      <%= text_field_tag(:query, nil, { autocomplete: :off, class: 'border' } ) %>
      <%= submit_tag('Search', name: nil) %>
    </div>
  <% end %>
  </div>

  <div id="properties" class="min-w-full my-5">
    <%= render partial: "result", collection: @properties || render('empty') %>
  </div>
  <%== pagy_nav(@pagy) %>
</div>
